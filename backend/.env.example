# QuickClock Environment Configuration Template
# Copy this file to .env and fill in your values

# Spring Profile (dev or prod)
SPRING_PROFILES_ACTIVE=dev

# JWT Configuration
# Generate with: openssl rand -base64 64
JWT_SECRET=REPLACE_WITH_YOUR_OWN_64_BYTE_SECRET
JWT_ISSUER=QuickClock-API
JWT_AUDIENCE=QuickClock-App

# App Security
DUMMY_HASH=YOUR_DUMMY_HASH

# Cookie Security (false for dev, true for prod)
COOKIE_SECURE=true

# Database Configuration (for prod with PostgreSQL)
# Not needed for dev (uses H2)
#DB_URL=jdbc:postgresql://localhost:5432/quickclock
#DB_USERNAME=postgres
#DB_PASSWORD=your_password_here

# Frontend URL
FRONTEND_BASE_URL=http://localhost:8081

# Token Settings
CLOCKING_TOKEN_EXPIRY=30

PASSWORD_MIN_ENTROPY=55

SSL_KEYSTORE_PASSWORD="YOUR_SSL_KEYSTORE_PASSWORD_HERE"

SUPER_ADMIN_USERNAME=YOUR_SUPER_ADMIN_USERNAME_HERE
SUPER_ADMIN_PASSWORD=YOUR_SUPER_ADMIN_PASSWORD_HERE

KIOSK_USERNAME=YOUR_KIOSK_USERNAME_HERE
KIOSK_PASSWORD=YOUR_KIOSK_PASSWORD_HERE