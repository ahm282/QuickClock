# QuickClock Backend Environment Configuration Template
# Copy this file to .env and fill in your values
# For local (non-Docker) development

# ============================================
# Spring Profile (dev or prod)
# ============================================
SPRING_PROFILES_ACTIVE=dev

# ============================================
# JWT Configuration
# ============================================
# Generate with: openssl rand -base64 64
JWT_SECRET=REPLACE_WITH_YOUR_OWN_64_BYTE_SECRET_KEY_HERE
JWT_ISSUER=QuickClock-API
JWT_AUDIENCE=QuickClock-App

# ============================================
# Application Settings
# ============================================
FRONTEND_BASE_URL=https://localhost:8081
COOKIE_SECURE=true
COOKIE_DOMAIN=

# ============================================
# Token Settings
# ============================================
CLOCKING_TOKEN_EXPIRY=30
PASSWORD_MIN_ENTROPY=42

# ============================================
# SSL Configuration
# ============================================
# Password for the Spring Boot keystore (keystore.p12)
SSL_KEYSTORE_PASSWORD=YOUR_SECURE_KEYSTORE_PASSWORD_HERE

# ============================================
# Bootstrap Configuration (First Run Setup)
# ============================================
APP_BOOTSTRAP_ENABLED=true
APP_SEED_ENABLED=true

# Super Admin Account (created on first startup)
SUPER_ADMIN_USERNAME=superadmin
SUPER_ADMIN_PASSWORD=SuperSecurePassword123!
SUPER_ADMIN_DISPLAYNAME=Super Admin

# Kiosk Account (for clock-in/out kiosk mode)
KIOSK_USERNAME=kiosk
KIOSK_PASSWORD=KioskSecurePassword123!

# ============================================
# Database Configuration (for prod with PostgreSQL)
# ============================================
# Not needed for dev (uses H2)
# DB_USERNAME=postgres
# DB_PASSWORD=your_secure_db_password_here


# ============================================
# Timezone and Week Start Day
# ============================================
APP_TIMEZONE=Africa/Cairo
APP_WEEK_START_DAY=SATURDAY