# QuickClock Docker Development Environment Configuration
# Copy this file to .env in the project root and fill in your values
# This file is used by docker-compose.dev.yml

# ============================================
# JWT Configuration
# ============================================
# Generate a secure secret with: openssl rand -base64 64
JWT_SECRET=REPLACE_WITH_YOUR_OWN_64_BYTE_SECRET_KEY_HERE
JWT_ISSUER=QuickClock-API
JWT_AUDIENCE=QuickClock-App

# ============================================
# Application Settings
# ============================================
FRONTEND_BASE_URL=https://localhost
COOKIE_SECURE=true
COOKIE_DOMAIN=

# ============================================
# Token Settings
# ============================================
CLOCKING_TOKEN_EXPIRY=30
PASSWORD_MIN_ENTROPY=42

# ============================================
# SSL Configuration
# ============================================
# Password for the Spring Boot keystore (keystore.p12)
# IMPORTANT: This password must match what you use when generating certificates
SSL_KEYSTORE_PASSWORD=YOUR_SECURE_KEYSTORE_PASSWORD_HERE

# ============================================
# Bootstrap Configuration (First Run Setup)
# ============================================
# Super Admin Account (created on first startup)
SUPER_ADMIN_USERNAME=superadmin
SUPER_ADMIN_PASSWORD=SuperSecurePassword123!
SUPER_ADMIN_DISPLAYNAME=Super Admin

# Kiosk Account (for clock-in/out kiosk mode)
KIOSK_USERNAME=kiosk
KIOSK_PASSWORD=KioskSecurePassword123!

# ============================================
# Seeding Configuration
# ============================================
SEED_ENABLED=true
