# =============================================================================
# QuickClock Production Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your production values
# 
# SECURITY WARNING: 
#   - Never commit .env to version control
#   - Use strong, unique passwords for all credentials
#   - Rotate JWT_SECRET periodically
# =============================================================================

# =============================================================================
# Crowdsec Configuration
# =============================================================================
CROWDSEC_BOUNCER_API_KEY=CHANGE_ME_CROWDSEC_API_KEY_HERE

# =============================================================================
# DOMAIN & SSL CONFIGURATION
# =============================================================================
# Your domain name (without https://)
DOMAIN_NAME=quickclock.dev

# Email for Let's Encrypt certificate notifications
CERTBOT_EMAIL=admin@quickclock.dev

# Set to 1 for testing (avoids Let's Encrypt rate limits)
# Set to 0 for production (real certificates)
CERTBOT_STAGING=0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database name
POSTGRES_DB=quickclock

# PostgreSQL username
POSTGRES_USER=postgres

# PostgreSQL password (CHANGE THIS!)
# Generate with: openssl rand -base64 32
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# JWT Secret Key (MUST be at least 64 characters for HS512)
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_GENERATE_WITH_openssl_rand_base64_64

# JWT Issuer (identifies who created the token)
JWT_ISSUER=QuickClock-API

# JWT Audience (identifies who the token is intended for)
JWT_AUDIENCE=QuickClock-APP

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Clocking token expiry in seconds (how long a clock-in/out token is valid)
CLOCKING_TOKEN_EXPIRY=30

# Minimum password entropy (complexity requirement)
PASSWORD_MIN_ENTROPY=42

# Timezone for the application
APP_TIMEZONE=Africa/Cairo

# First day of the work week (MONDAY, TUESDAY, ..., SUNDAY, SATURDAY)
APP_WEEK_START_DAY=SATURDAY

# =============================================================================
# BOOTSTRAP CONFIGURATION (First Run Only)
# =============================================================================
# Set to true ONLY on first deployment to create initial accounts
# After first run, set back to false for security
APP_BOOTSTRAP_ENABLED=true

# Enable seeding of demo data (set to false in production)
SEED_ENABLED=false

# =============================================================================
# SUPER ADMIN ACCOUNT (Created on First Run)
# =============================================================================
# Username for the super admin account
SUPER_ADMIN_USERNAME=superadmin

# Password for super admin (CHANGE THIS!)
# Must meet minimum entropy requirements
SUPER_ADMIN_PASSWORD=CHANGE_ME_SuperSecure123!

# Display name for super admin
SUPER_ADMIN_DISPLAYNAME=System Administrator

# =============================================================================
# KIOSK ACCOUNT (Created on First Run)
# =============================================================================
# Username for the kiosk account (used for clock-in/out terminals)
KIOSK_USERNAME=kiosk

# Password for kiosk account (CHANGE THIS!)
KIOSK_PASSWORD=CHANGE_ME_KioskSecure123!

# =============================================================================
# OPTIONAL: ADDITIONAL EMPLOYEE ACCOUNTS
# =============================================================================
# These are created by the bootstrap script (bootstrap-accounts.sh)
# You can customize them there or create accounts via the admin UI

# =============================================================================
# QUICK SETUP CHECKLIST
# =============================================================================
# [ ] Set DOMAIN_NAME to your actual domain
# [ ] Set CERTBOT_EMAIL to a valid email address
# [ ] Generate and set POSTGRES_PASSWORD
# [ ] Generate and set JWT_SECRET (openssl rand -base64 64)
# [ ] Set strong SUPER_ADMIN_PASSWORD
# [ ] Set strong KIOSK_PASSWORD
# [ ] Verify APP_TIMEZONE matches your location
# [ ] Set CERTBOT_STAGING=0 for production
# =============================================================================
